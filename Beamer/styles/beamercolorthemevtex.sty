\mode<presentation>

\usepackage{xcolor}

% -----------------------------------------------------------------------------
% Define basic color palette
% -----------------------------------------------------------------------------
\definecolor{background}{HTML}{fafafa}
\definecolor{Gray}{HTML}{858a8a}
\definecolor{text}{HTML}{2d3b54}

% -----------------------------------------------------------------------------
% Define main colors palette
% -----------------------------------------------------------------------------
\DeclareOptionBeamer{style}{\def\beamer@mytheme@style{#1}}
\ExecuteOptionsBeamer{style=std} % color palette default
\ProcessOptionsBeamer

\def\beamer@mytheme@stylepolar{Polar}%
\def\beamer@mytheme@stylemarceline{Marceline}%
\def\beamer@mytheme@stylemonokai{Monokai}%
\def\beamer@mytheme@stylekanagawa{Kanagawa}%

\ifx\beamer@mytheme@style\beamer@mytheme@stylepolar%
  \definecolor{primaryLight}{HTML}{2e3440}
  \definecolor{primary}{HTML}{3b4252}
  \definecolor{secondary}{HTML}{434c5e}
  \definecolor{tertiary}{HTML}{4c566a}
\else\ifx\beamer@mytheme@style\beamer@mytheme@stylemarceline%
  \definecolor{primaryLight}{HTML}{ffa0a0}
  \definecolor{primary}{HTML}{dd0606}
  \definecolor{secondary}{HTML}{ff5555}
  \definecolor{tertiary}{HTML}{f6fcaf}
\else\ifx\beamer@mytheme@style\beamer@mytheme@stylemonokai%
  \definecolor{primaryLight}{HTML}{ff6188}
  \definecolor{primary}{HTML}{fc9867}
	\definecolor{secondary}{HTML}{ffd866}
	\definecolor{tertiary}{HTML}{a9dc76}
\else\ifx\beamer@mytheme@style\beamer@mytheme@stylekanagawa%
  \definecolor{primaryLight}{HTML}{2e3257}
	\definecolor{primary}{HTML}{627d9a}
	\definecolor{secondary}{HTML}{dfc5a4}
	\definecolor{tertiary}{HTML}{babbbd}
\else%
  \definecolor{primaryLight}{HTML}{2e3257}
	\definecolor{primary}{HTML}{627d9a}
	\definecolor{secondary}{HTML}{dfc5a4}
	\definecolor{tertiary}{HTML}{babbbd}
\fi\fi\fi%
\fi%

% -----------------------------------------------------------------------------
% Apply colors
% -----------------------------------------------------------------------------
\setbeamercolor*{background canvas}{bg=background}
\setbeamercolor*{footer}{fg=Gray!45}
\setbeamercolor*{footer text}{fg=Gray}
\setbeamercolor*{header title}{fg=primaryLight!25}
\setbeamercolor*{header primary}{fg=white,bg=primaryLight}
\setbeamercolor*{header secondary}{fg=white,bg=primary}
\setbeamercolor*{secondary}{fg=secondary!15,bg=secondary}
\setbeamercolor*{example text}{fg=tertiary}
\setbeamercolor*{normal text}{fg=text}
\setbeamercolor*{alerted text}{fg=secondary}
\setbeamercolor*{itemize item}{fg=primary}
\setbeamercolor*{itemize subitem}{fg=primary}
\setbeamercolor*{itemize subsubitem}{fg=primary}
\setbeamercolor*{enumerate item}{fg=primary}
\setbeamercolor*{enumerate subitem}{fg=primary}
\setbeamercolor*{enumerate subsubitem}{fg=primary}
\setbeamercolor*{description item}{fg=primary}
\setbeamercolor*{caption name}{fg=primary}

\setbeamercolor{block title}{bg=primaryLight, fg=background}%
\setbeamercolor{block body}{bg=normal text.bg!85!fg}%
\setbeamercolor{block title alerted}{bg=secondary!75, fg=background}%
\setbeamercolor{block body alerted}{bg=normal text.bg!85!fg}%
\setbeamercolor{block title example}{bg=example text.fg!75, fg=background}%
\setbeamercolor{block body example}{bg=normal text.bg!85!fg}%

\setbeamercolor*{bibliography entry author}{fg=primary}
\setbeamercolor*{bibliography entry title}{fg=text}
\setbeamercolor*{bibliography entry location}{fg=text}
\setbeamercolor*{bibliography entry note}{fg=text}

\mode<all>
