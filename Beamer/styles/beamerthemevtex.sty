% -----------------------------------------------------------------------------
% Capture argument color style
% -----------------------------------------------------------------------------
\DeclareOptionBeamer{style}{
    \PassOptionsToPackage{style=#1}{styles/beamercolorthemevtex}
}
\ExecuteOptionsBeamer{style=std}
\ProcessOptionsBeamer


% -----------------------------------------------------------------------------
% Import settings
% -----------------------------------------------------------------------------
\usecolortheme{vtex}
\usefonttheme{vtex}
\useinnertheme{vtex}
\useoutertheme{vtex}


% -----------------------------------------------------------------------------
% Config navigation buttons and margins
% -----------------------------------------------------------------------------
\setbeamertemplate{navigation symbols}{}
\setbeamersize{text margin left=7mm,text margin right=7mm}

\mode<all>
